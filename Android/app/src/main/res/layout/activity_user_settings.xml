<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.UserSettingsActivity"
    android:padding="15dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:id="@+id/settings_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/email_new"
        android:gravity="center"
        />

    <Button
        android:tag="email"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/email_set"
        android:layout_marginBottom="15dp"
        android:background="@color/orange_light"
        android:onClick="onUpdateClicked"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"


        />


    <EditText
        android:id="@+id/settings_et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/username_new"
        android:gravity="center"
        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/username_set"
        android:layout_marginBottom="15dp"
        android:background="@color/orange_light"
        android:onClick="onUpdateClicked"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:tag="username"
        />


    <EditText
        android:id="@+id/settings_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/password_new"
        android:gravity="center"
        />

    <Button
        android:tag="password"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/password_reset"
        android:background="@color/orange_light"
        android:onClick="onUpdateClicked"
        android:layout_marginBottom="60dp"
        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/rate"
        android:background="@color/orange_light"
        android:layout_marginBottom="15dp"
        android:onClick="onRateClicked" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/feedback"
        android:background="@color/orange_light"
        android:layout_marginBottom="15dp"
        android:onClick="onFeedbackClicked" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/user_delete"
            android:layout_margin="15dp"
            android:background="@color/orange_light"
            android:onClick="onDeleteClicker"
            android:padding="15dp"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Logout"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/orange_light"
            android:onClick="onLogoutClicked"
            />

    </LinearLayout>


</LinearLayout>

</ScrollView>